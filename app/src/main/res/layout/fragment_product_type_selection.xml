<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundapp"
    tools:context=".fragments.ProductTypeSelectionFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAllProducts"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="100dp"
        app:cardElevation="30dp"
        app:cardBackgroundColor ="@color/cardColor3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="37dp"
            android:textStyle="bold"
            android:gravity="center|start"
            android:layout_marginStart="10dp"
            android:text="All Products List"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_slab"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end|center"
            android:src="@drawable/baseline_open_in_new_24"
            android:layout_marginEnd="10dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvReadyProducts"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="100dp"
        app:cardElevation="30dp"
        app:cardBackgroundColor ="@color/cardColor3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvAllProducts">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="37sp"
            android:textStyle="bold"
            android:gravity="center|start"
            android:layout_marginStart="10dp"
            android:text="Ready Stock List"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_slab"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end|center"
            android:src="@drawable/baseline_open_in_new_24"
            android:layout_marginEnd="10dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogout"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_slab"
        android:textColor="@color/white"
        android:background="@drawable/nobtn_background"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>